<span class="unit-price{% unless variant.unit_price_measurement %} hide{% endunless %}">
    (<span class="unit-price__price"><span class="money">
            {% include "price-with-rate" | price: variant.unit_price  | iva: product.metafields.products["Tax percentage"] %}
            </span></span>
    <span> / </span>
    {%- if variant.unit_price_measurement.reference_value != 1 -%}
        <span class="unit-price__ref-value">{{ variant.unit_price_measurement.reference_value }}</span>
    {%- endif -%}
    <span class="unit-price__ref-unit">{{ variant.unit_price_measurement.reference_unit }}</span>)
</span>
