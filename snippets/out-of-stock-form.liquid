<div class="out-of-stock-form">
    {% form 'customer' %}
        {% if form.posted_successfully? %}
            <div class="accent-text">{{ 'products.product.out_of_stock_success' | t }}</div>
        {% else %}
            <div id="notify-me">{{ 'products.product.out_of_stock_html' | t: product: product.title }}</div>
        {% endif %}
        {% if form.errors %}
            <div class="error feedback accent-text">
                <div class="accent-text">{{ 'products.product.wrong_email' | t }}</div>
            </div>
        {% endif %}
        {% unless form.posted_successfully? %}
            <div id="notify-me-wrapper" class="clearfix">
                {% if customer %}
                    <input type="hidden" class="logged-in" value="0">
                    <input type="hidden" name="contact[email]" value="{{ customer.email }}" />
                {% else %}
                    <input required="required" type="email" name="contact[email]" placeholder="your@email.com" class="styled-input{% if form.errors contains 'email' %} error{% endif %}" value="{{ customer.email }}" />
                {% endif %}
                <input class="btn" type="submit" value="{{ 'contact.form.send' | t }}" />
                <input type="hidden" name="contact[tags]" value="newsletter,Aviso">
            </div>
        {% endunless %}
    {% endform %}
</div>