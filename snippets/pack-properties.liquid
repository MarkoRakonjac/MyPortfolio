{% for field in product.metafields.products %}    {% assign fieldName = field | first %}    {% if fieldName contains "ProductName" %}        {% assign fieldId = fieldName | replace: "-ProductName" , "" %}        {% assign fieldSKU = fieldId | append: "-SKU" %}        {% assign fieldPrice = fieldId | append: "-ReducedPrice" %}        {% assign fieldGrams = fieldId | append: "-Grams" %}        {% assign fieldQuantity = fieldId | append: "-Quantity" %}        {% assign fieldPriceValue =  product.metafields.products[fieldPrice]  | times: 100 | money %}        {% assign fieldSKUValue =  product.metafields.products[fieldSKU]  %}        {% assign fieldGramsValue =  product.metafields.products[fieldGrams] | default: 0 %}        {% assign fieldQuantityValue =  product.metafields.products[fieldQuantity] | default: 1 %}        <input data-pack-properties type="hidden" name="properties[{{ field | last }}]" value="{{ fieldQuantityValue }}/{{ fieldSKUValue }}/{{ fieldGramsValue }}/{{ fieldPriceValue }}">    {% endif %}{% endfor %}