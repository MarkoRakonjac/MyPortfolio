<!-- /snippets/social-meta-tags.liquid -->
{% comment %}
  Open graph tags
{% endcomment %}
{% if template == 'index' %}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page_title }}">
  <meta property="og:description" content="{{ page_description }}">

{% elsif template contains 'product' %}
  <meta property="og:type" content="product">
  <meta property="og:title" content="{{ product.title | strip_html | escape }}">
  {% for media in product.media limit:3 %}
    <meta property="og:image" content="http:{% comment ls-rpl %}{{ media.preview_image | img_url: 'grande' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: media.preview_image, img_url: 'grande' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
    <meta property="og:image:secure_url" content="https:{% comment ls-rpl %}{{ media.preview_image | img_url: 'grande' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: media.preview_image, img_url: 'grande' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% endfor %}
  <meta property="og:description" content="{{ product.description | strip_html | escape }}">
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html | escape | replace: ',', '.' }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">


{% elsif template contains 'collection' %}
  {% if collection.image %}
    <meta property="og:image" content="http:{% comment ls-rpl %}{{ collection | img_url: '600x600' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: collection, img_url: '600x600' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
    <meta property="og:image:secure_url" content="https:{% comment ls-rpl %}{{ collection | img_url: '600x600' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: collection, img_url: '600x600' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% endif %}
    <meta name="twitter:description" content="{{ collection.description | strip_html | truncate: 200, '' | escape }}" />


{% elsif template contains 'article' %}
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ article.title | strip_html | escape }}">
  {% if article.image %}
    <meta property="og:image" content="http:{% comment ls-rpl %}{{ article | img_url: '1024x1024' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: article, img_url: '1024x1024' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
    <meta property="og:image:secure_url" content="https:{% comment ls-rpl %}{{ article | img_url: '1024x1024' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: article, img_url: '1024x1024' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% endif %}
  <meta property="og:description" content="{{ article.excerpt_or_content | strip_html | escape }}">
{% else %}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page_title | escape }}">
  {% if settings.logo_use_image %}
    <meta property="og:image" content="http:{{ 'logo.png' | asset_url }}">
    <meta property="og:image:secure_url" content="https:{{ 'logo.png' | asset_url }}">
  {% endif %}
{% endif %}
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:site_name" content="{{ shop.name }}">

{% if settings.share_image %}
  <meta property="og:image" content="http:{% comment ls-rpl %}{{ settings.share_image | img_url: '1200x1200' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: settings.share_image, img_url: '1200x1200' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  <meta property="og:image:secure_url" content="https:{% comment ls-rpl %}{{ settings.share_image | img_url: '1200x1200' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: settings.share_image, img_url: '1200x1200' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
{% endif %}

{% comment %}
  Twitter card
{% endcomment %}
{% unless settings.sm_twitter_link == blank %}
  <meta name="twitter:site" content="@{{ settings.sm_twitter_link | split: 'twitter.com/' | last }}">
{% endunless %}
{% if template contains 'article' and article.image %}
  <meta name="twitter:card" content="summary_large_image">
{% else %}
  <meta name="twitter:card" content="summary">
{% endif %}
{% if template == 'index' %}
  <meta name="twitter:title" content="{{ page_title | remove: "|" }}">
  <meta name="twitter:description" content="{{ page_description | escape }}">

{% elsif template contains 'product' %}
  <meta name="twitter:title" content="{{ product.title | strip_html | escape | remove: "|" }}">
  <meta name="twitter:description" content="{{ product.description | strip_html | truncate: 200, '' | escape }}">
  <meta name="twitter:image" content="https:{% comment ls-rpl %}{{ product.media[0].preview_image | img_url: 'grande' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: product.media[0].preview_image, img_url: 'grande' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  <meta name="twitter:image:width" content="600">
  <meta name="twitter:image:height" content="600">

{% elsif template contains 'collection' %}
  {% if collection.image %}
    <meta name="twitter:image" content="https:{% comment ls-rpl %}{{ collection | img_url: '600x600' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: collection, img_url: '600x600' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% elsif settings.share_image %}
    <meta name="twitter:image" content="https:{% comment ls-rpl %}{{ settings.share_image | img_url: '600x600' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: settings.share_image, img_url: '600x600' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% endif %}
  <meta name="twitter:image:width" content="600">
  <meta name="twitter:image:height" content="600">
  <meta name="twitter:description" content="{{ collection.description | strip_html | truncate: 200, '' | escape }}" />

{% elsif template contains 'article' %}
  <meta name="twitter:title" content="{{ article.title | strip_html | escape | remove: "|" }}">
  <meta name="twitter:description" content="{{ article.excerpt_or_content | strip_html | truncate: 200, '' | escape }}">
  {% if article.image %}
    <meta property="twitter:image" content="https:{% comment ls-rpl %}{{ article | img_url: '1024x1024' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: article, img_url: '1024x1024' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
  {% elsif article.content contains "<img" %}
   {% assign src = article.content | split: 'src="' %}
   {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'http://cdn'; | replace: 'http:http://';, 'http://'; | remove: 'https:' %}
   <meta name="twitter:image" content="{{ src }}">
  {% endif %}

  {% elsif settings.share_image %}
    <meta name="twitter:image" content="https:{% comment ls-rpl %}{{ settings.share_image | img_url: '600x600' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: settings.share_image, img_url: '600x600' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}">
{% endif %}
